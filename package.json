  },
  "keywords": [
    "mongodb",
    "database",
    "file-based",
    "drop-in",
    "local",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "mongodb": "^6.12.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
